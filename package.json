{
  "name": "mern-tutorial-project",
  "version": "1.0.0",
  "description": "Mern stack",
  "main": "app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node app.js",
    "server": "nodemon app.js",
    "client": "yarn --cwd client start",
    "dev": "cross-env NODE_ENV=development concurrently \"yarn server\" \"yarn client\"",
    "client:install": "yarn --cwd client",
    "client:build": "yarn --cwd client build"
  },
  "keywords": [
    "mern",
    "mongo",
    "express",
    "react",
    "nodejs"
  ],
  "author": "Alexander Bakun <bakun.alex93@gmail.com>",
  "license": "MIT",
  "prettier": {
    "tabWidth": 4,
    "singleQuote": true
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "config": "^3.3.6",
    "express": "^4.17.1",
    "express-validator": "^6.12.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.10",
    "shortid": "^2.2.16"
  },
  "devDependencies": {
    "concurrently": "^6.3.0",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.13"
  }
}
